   "source": [
    "import math\n",
    "import numpy as np\n",
    "\n",
    "trials = np.random.binomial(n=1, p=0.3, size=1000)\n",
    "\n",
    "simulated_p = np.mean(trials)\n",
    "\n",
    "print(\"Simulated Probability of Success:\", simulated_p)\n",
    "\n",
    "print(\"Matches theoretical P ≈ 0.3 for Bernoulli trial.\")"
   ]
  }
